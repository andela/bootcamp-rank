div(layout='column', style='height:900px;')
  section(layout='row', flex='')
    md-sidenav.md-sidenav-left.md-whiteframe-z2(md-component-id='left', md-is-locked-open="$mdMedia('gt-md')")
      md-list
        md-subheader.md-no-sticky
          | Bootcamp projects
          md-input-container
            i.material-icons  sort
            label Search
            input(ng-model='search')
        md-divider
        md-list-item.md-2-line(ng-repeat='project in projects | filter:search', ng-click='changeCurrentProject(project)')
          img.md-avatar.user-image(ng-src='{{project.picture}}', alt='{{project.name}}')
          .md-list-item-text(layout='column')
            h3 {{ project.project }}
            h4 {{ project.name }}
          md-divider
    md-content(flex='', layout-padding='')
      md-card(ng-if='!project')
        md-card-content
          md-subheader.md-no-sticky
            h2 Dashboard
            md-divider
          md-subheader
            i.fa.fa-hand-o-left.fa-2x
            |  Select a project from the left panel to view scores
        br
      md-card.dash(ng-if='!project')
        md-card-content
          md-subheader.md-no-sticky
        br
      md-card.black-card.md-padding(layout='row', ng-if='project')
        md-card.profile-pic
          img(src='{{project.picture}}', flex='')
        .md-padding.md-margin(layout='column', flex='')
          div(layout='row')
            p.white-text.md-display-3.packed-top.packed-bottom.bold-text(flex='')  {{project.name}}
          div(layout='row')
            div(layout='row')
              span.fa.fa-lg.fa-folder.white-text.md-margin(style='margin-top: 30px')
              p.white-text.md-headline.bold-text  PROJECT:   
            p.white-text.md-headline(flex='')  {{project.project}}
          div(layout='row')
            md-button.md-raised.md-primary(ng-click='openLink(project.repository)')
              i.fa.fa-lg.fa-github
              |  Git repository
            md-button.md-raised.md-primary(ng-click='openLink(project.demo)')
              i.fa.fa-lg.fa-globe
              |  Live Demo
            md-button.md-raised.md-primary(ng-csv='export', csv-header='getHeader()', filename='{{ project.name }}.csv', field-separator='{{separator}}', decimal-separator='{{decimalSeparator}}')
              i.fa.fa-lg.fa-globe
              |  Export Comments
      md-card.md-padding.md-margin(style='height: 250px', ng-if='project')
        div(layout='row', flex='')
          md-card.card-blue.md-margin.md-padding(layout='column', flex='')
            div(layout='row')
              span.fa.fa-2x.fa-key.md-margin.white-text.packed-top
              p.md-headline.packed-top.packed-bottom.white-text.bold-text Confidence
            div(layout='row', layout-align='center center')
              p.md-display-4.white-text.bold-text.packed-top.packed-bottom {{confidence}}
          md-card.card-green.md-margin.md-padding(layout='column', flex='')
            div(layout='row')
              span.fa.fa-2x.fa-trophy.md-margin.white-text.packed-top
              p.md-headline.packed-top.packed-bottom.white-text.bold-text Quality
            div(layout='row', layout-align='center center')
              p.md-display-4.white-text.bold-text.packed-top.packed-bottom {{quality}}
          md-card.card-pink.md-margin.md-padding(layout='column', flex='')
            div(layout='row')
              span.fa.fa-2x.fa-picture-o.md-margin.white-text.packed-top
              p.md-headline.packed-top.packed-bottom.white-text.bold-text UI-UX
            div(layout='row', layout-align='center center')
              p.md-display-4.white-text.bold-text.packed-top.packed-bottom {{ui_ux}}
          md-card.card-orange.md-margin.md-padding(layout='column', flex='')
            div(layout='row')
              span.fa.fa-2x.fa-graduation-cap.md-margin.white-text.packed-top
              p.md-headline.packed-top.packed-bottom.white-text.bold-text Understanding
            div(layout='row', layout-align='center center')
              p.md-display-4.white-text.bold-text.packed-top.packed-bottom {{understanding}}
      div(layout='row', ng-if='project')
        md-card.md-margin.md-padding(layout='column', flex='')
          p.md-display-1.bold-text.packed-bottom.packed-top Comments
          p.packed-top.packed-bottom {{message}}
          md-list-item.packed-top(ng-repeat='item in comments', layout-align='start start')
            img.md-avatar(ng-src='{{item.picture}}')
            div(layout='column')
              p.md-headline.packed-bottom {{ item.name }}
              p {{ item.comment }}
            br
            md-divider(flex='')
            br
